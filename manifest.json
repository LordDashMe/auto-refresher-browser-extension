{
  "manifest_version": 3,
  "name": "Auto Page Refresher",
  "version": "1.0",
  "description": "Auto refresh tabs with a user-defined interval and countdown timer.",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Refresher"
  },
  "background": {
    "service_worker": "background.js"
  }
}
